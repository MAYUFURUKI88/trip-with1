<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "プロフィール"%>
      </h2>
      <table class="detail-table">
        <tbody>
          <tr>
            <th class="detail-item">ニックネーム</th>
            <td class="detail-value"><%= @user.nickname %></td>
          </tr>
          <tr>
            <th class="detail-item">メールアドレス</th>
            <td class="detail-value"><%= @user.email %></td>
          </tr>
          <tr>
            <th class="detail-item">性別</th>
            <td class="detail-value"><%= @user.sex.name %></td>
          </tr>
          <tr>
            <th class="detail-item">年齢</th>
            <td class="detail-value"><%= @user.age.name %></td>
          </tr>
          <tr>
            <th class="detail-item">住所</th>
            <td class="detail-value"><%= @user.prefecture.name %></td>
          </tr>
        </tbody>
      </table>
      
      <%= link_to 'プロフィールの編集', edit_user_path , method: :get, class: "item-blue-btn" %>

      <h2 class="page-heading" style="padding-top: 40px;">
        <%= "企画中の旅行"%>
      </h2>
      <div class="user__card">
        <%= render partial: "plans/plan", collection: @plans %>
      </div>
      
      <h2 class="page-heading" style="padding-top: 40px;">
        <%= "参加中の旅行"%>
      </h2>
      <div class="user__card">
     <% @joints.each do |joint| %>
          <%= render "plans/jointplan", plan: joint.plan %>
        <% end %>
      </div>

      <h3>お気に入りしている投稿</h3>
      <% @user.liked_plans.each do |plan| %>
      <%= link_to image_tag(plan.image, class: :card__img ), plan_path(plan.id)%>
      <%= link_to plan.title, plan_path(plan.id), class: :card__title%>
    <%= link_to plan.trip.name, search_plans_path(trip_id: plan.trip_id), class: :card__user %>
      <% end %>
    </div>
  </div>
</div>